<!-- app/views/devise/registrations/new.html.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - HR Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

  <!-- Main Content: Sign-Up Form -->
  <main class="py-12">
    <div class="max-w-7xl mx-auto px-4">
      <div class="bg-white shadow-lg rounded-lg p-8 w-full sm:w-96 mx-auto">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Create Your Account</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <% if resource.errors.any? %>
            <div class="bg-red-100 text-red-600 p-4 mb-4 rounded-md">
              <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="mb-4">
            <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :username, autofocus: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.submit "Sign Up", class: "w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          </div>
        <% end %>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">Already have an account? <%= link_to "Log in", new_user_session_path, class: "text-indigo-600 hover:text-indigo-500" %></p>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
