<h1 class="text-xl font-semibold mb-4 text-gray-700">Reimbursement Request Details</h1>
<div class="bg-white p-6 rounded-md shadow-md mb-6">
  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Title:</strong>
    <p class="text-gray-900"><%= @reimbursement_request.expense.title %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Amount:</strong>
    <p class="text-gray-900"><%= number_to_currency(@reimbursement_request.total_amount) %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Reason:</strong>
    <p class="text-gray-900"><%= @reimbursement_request.expense.description %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Status:</strong>
    <p class="text-gray-900"><%= @reimbursement_request.status&.humanize %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Date Submitted:</strong>
    <p class="text-gray-900"><%= @reimbursement_request.created_at.strftime('%B %d, %Y') %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Approved Date:</strong>
    <p class="text-gray-900"><%#= @reimbursement_request.approved_at.present? ? @reimbursement_request.approved_at.strftime('%B %d, %Y') : 'N/A' %></p>
  </div>

  <!-- Add more fields if required -->
  
  <div class="mt-6">
    <%= link_to 'Back to Requests', reimbursement_requests_path, class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300' %>
    <%= link_to 'Edit', edit_reimbursement_request_path(@reimbursement_request), class: 'ml-4 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600' %>
    <%= link_to 'Delete', reimbursement_request_path(@reimbursement_request), method: :delete, data: { confirm: 'Are you sure you want to delete this reimbursement request?' }, class: 'ml-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600' %>
  </div>
</div>
