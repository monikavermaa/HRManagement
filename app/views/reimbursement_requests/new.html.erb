<h1 class="text-xl font-semibold mb-4">New Reimbursement Request</h1>

<%= form_with(model: @reimbursement_request, local: true) do |form| %>
  <% if @reimbursement_request.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @reimbursement_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :status, 'Status', class: 'block text-sm font-medium text-gray-700' %>
    <%= form.select :status, ReimbursementRequest.statuses.keys.map { |status| [status.humanize, status.to_s] }, { prompt: "Select status" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :expense, 'Expense', class: 'block text-sm font-medium text-gray-700' %>
    <%= form.select :expense_id, current_user.expenses.left_outer_joins(:reimbursement_request).where(reimbursement_request: { id: nil }).map { |expense| [expense.title, expense.id] }, { prompt: "Select expense" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "expense_select" %>
  </div>

  <div class="mb-4">
    <%= form.submit 'Create Reimbursement Request', class: 'inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
  </div>
<% end %>