<h1 class="text-xl font-semibold mb-4 text-gray-700">Expense Details</h1>
<div class="bg-white p-6 rounded-md shadow-md mb-6">
  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Title:</strong>
    <p class="text-gray-900"><%= @expense.title %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Amount:</strong>
    <p class="text-gray-900"><%= number_to_currency(@expense.amount) %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Category:</strong>
    <p class="text-gray-900"><%= @expense.category&.humanize %></p>
  </div>

  <div class="mb-4">
    <strong class="text-sm font-medium text-gray-700">Date:</strong>
    <p class="text-gray-900"><%= @expense.date.strftime('%B %d, %Y') %></p>
  </div>

  <div class="flex justify-start mb-8">
    <% if @expense.proof.attached? %>
      <%= image_tag @expense.proof, alt: "Profile Picture", class: "w-32 h-32 rounded-full object-cover border-4 border-indigo-600 shadow-lg" %>
    <% else %>
      <div class="w-32 h-32 rounded-full bg-gray-300 flex items-center justify-center text-xl text-gray-600 font-semibold shadow-lg">
        <span>No Image</span>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to 'Back to Expenses', expenses_path, class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300' %>
    <%= link_to 'Edit', edit_expense_path(@expense), class: 'ml-4 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600' %>
    <%= link_to 'Delete', expense_path(@expense), method: :delete, data: { confirm: 'Are you sure you want to delete this expense?' }, class: 'ml-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600' %>
  </div>
</div>
